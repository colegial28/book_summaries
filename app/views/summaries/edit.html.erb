<h1> Edit summary</h1>

<%= form_for [@book, @summary] do |f| %>
	<div>
		<%= f.label :chapter_title  %><br/>
    	<%= f.text_field :chapter_title %>
	</div>
	<div>
		<%= f.label :body %><br/>
    	<%= f.text_area :body %>
	</div>
	<div>
		<%= f.label :chapter_number %><br/>
    	<%= f.select :chapter_number,0...100 %>
	</div>
	<div>
		<%= f.submit 'Submit' %>
	</div>
	<% end %>
	<%= link_to "Go back" , book_path(@book) %>